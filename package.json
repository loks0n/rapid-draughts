{
  "name": "rapid-draughts",
  "private": false,
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Luke B. Silver",
    "email": "22452787+loks0n@users.noreply.github.com",
    "url": "https://loks0n.dev"
  },
  "homepage": "https://github.com/loks0n/rapid-draughts#readme",
  "description": "A super speedy, blazing fast, rocket-powered TypeScript draughts/checkers engine with move validation, AI and game history.",
  "repository": {
    "type": "git",
    "url": "https://github.com/loks0n/rapid-draughts.git"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "draughts",
    "draughts engine",
    "draughts validation",
    "checkers",
    "checkers engine",
    "draughts validation",
    "boardgame",
    "bitboard",
    "english draughts"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./english": {
      "types": "./dist/english.d.ts",
      "import": "./dist/english.js",
      "require": "./dist/english.cjs"
    }
  },
  "typesVersions": {
    ">4.0": {
      "index": [
        "./dist/index.d.ts"
      ],
      "english": [
        "./dist/english.d.ts"
      ]
    }
  },
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "publint",
    "build": "tsc && vite build",
    "examples:basic": "vite-node examples/basic.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ && prettier --check src/",
    "coverage": "vitest run --coverage",
    "release": "dotenv release-it"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "prettier": "^2.8.7",
    "publint": "^0.1.11",
    "release-it": "^15.10.1",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vite-node": "^0.29.8",
    "vite-plugin-dts": "^2.2.0",
    "vitest": "^0.29.8"
  },
  "dependencies": {
    "long": "^5.2.1"
  }
}
