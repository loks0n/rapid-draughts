{
  "name": "rapid-draughts",
  "private": false,
  "version": "0.8.5",
  "license": "MIT",
  "homepage": "https://github.com/loks0n/rapid-draughts#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/loks0n/rapid-draughts.git"
  },
  "type": "module",
  "files": [
    "dist/*",
    "index.d.ts",
    "core.d.ts",
    "english.d.ts"
  ],
  "keywords": [
    "draughts",
    "draughts engine",
    "checkers",
    "checkers engine",
    "boardgame",
    "bitboard",
    "english draughts"
  ],
  "module": "./dist/core.js",
  "exports": {
    "./core": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./english": {
      "import": "./dist/english.js",
      "require": "./dist/english.cjs"
    }
  },
  "types": "./index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "publint",
    "build": "tsc && vite build",
    "examples:basic": "vite-node examples/basic.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ && prettier --check src/",
    "coverage": "vitest run --coverage",
    "release": "release-it"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "prettier": "^2.8.5",
    "publint": "^0.1.10",
    "release-it": "^15.9.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vite-node": "^0.29.5",
    "vite-plugin-dts": "^2.1.0",
    "vitest": "^0.29.5"
  },
  "dependencies": {
    "long": "^5.2.1"
  }
}
